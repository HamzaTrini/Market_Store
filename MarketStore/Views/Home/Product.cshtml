@model Tuple< IEnumerable<MarketStore.Models.HomeFp>, IEnumerable<MarketStore.Models.TestimonialFp>, IEnumerable<MarketStore.Models.ProductFp>,IEnumerable<MarketStore.Models.StoreProductFp>>;

@{
	Layout="~/Views/Shared/_Home.cshtml";
	}
<style>
body{
    background-color:#eee;
}

.card{
    
    border:none;
}

.user-content p{
    margin-top:5px;
    font-size:12px;
}


.ratings i{
    color:blue;
}
</style>
<!-- Slider -->
	<section class="section-slide">
		
			
		<div class="wrap-slick1">
			<div class="slick1">
				@foreach(var item in Model.Item1){
				<div class="item-slick1" style="background-image: url('@Url.Content("/Home/images/" + item.ImagePath)');" >
					<div class="container h-full">
						<div class="flex-col-l-m h-full p-t-100 p-b-30 respon5">
							<div class="layer-slick1 animated visible-false" data-appear="fadeInDown" data-delay="0">
								<span class="ltext-101 cl2 respon2">
									Women And Men
								</span>
							</div>
								
							<div class="layer-slick1 animated visible-false" data-appear="fadeInUp" data-delay="800">
								<h2 class="ltext-201 cl2 p-t-19 p-b-43 respon1">
								@item.Discription
								</h2>
							</div>
								
							<div class="layer-slick1 animated visible-false" data-appear="zoomIn" data-delay="1600">
								<a href="#AllCategory" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04">
									Shop Now
								</a>
							</div>
						</div>
					</div>
				</div>
				}
					</div>
					</div>
					</section>
					<!-- Product -->
	<section class="bg0 p-t-23 p-b-140">
		<div class="container">
			<div class="p-b-10">
				<h3 class="ltext-103 cl5" id="AllCategory" >
					Product Overview
				</h3>
			</div>

			@*<div class="flex-w flex-sb-m p-b-52">*@
				<div class="flex-w flex-l-m filter-tope-group m-tb-10">
					<button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*" >
						All Product
					</button>

				</div>

			<div class="row isotope-grid">
				@foreach(var item in Model.Item4){
					
				<!--Mycode-->
				
				<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item ">
					<!-- Block2 -->
					<div class="block2">
						<div class="block2-pic hov-img0">
							@*<img src="~/Home/images/product-01.jpg" alt="IMG-PRODUCT">*@
							 <img src=@Url.Content("~/Home/images/" + item.Product.ImagePath) asp-append-version="true" 
                         height="245px" />

							<a href="/Home/BuyProduct/@item.Product.ProductId" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 ">
								 Buy Product 
							</a>
						</div>
						<div class="block2-txt flex-w flex-t p-t-14">
							<div class="block2-txt-child1 flex-col-l ">
								<div class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
									@item.Product.Name      $@item.Product.Price.00 
								</div>

								
							</div>
							
							
							<div class="block2-txt-child2 flex-r p-t-3">
								
							</div>
						</div>
					</div>
						
				</div>
				
				}
				</div>
		@*</div>*@
		</div>
		
		
	</section>

	 <div class="container mt-5 mb-5">
    
    <div class="row g-2">
		@foreach(var item in Model.Item2)
				{
        <div class="col-md-4">
            <div class="card p-3 text-center px-4">
                

				
                <div class="user-image">
                    
            @*<img src="https://i.imgur.com/PKHvlRS.jpg" class="rounded-circle" width="80"*@
                    
                     <img src=@Url.Content("~/Home/images/" + item.ImagePath) asp-append-version="true" 
                         class="rounded-circle" width="80" />
                </div>
                
                <div class="user-content">
                    
                    <h5 class="mb-0">@item.Name</h5>
                    
                    <p> @item.Discription</p>
                    
                </div>
                
                <div class="ratings">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
					<i class="fa fa-star"></i>
                    
                </div>
                
            </div>
			
        </div>
        }
        </div>
            
        </div>
        