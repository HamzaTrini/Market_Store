@model IEnumerable<MarketStore.Models.UserFp>

@{
	Layout="~/Views/Shared/_Home.cshtml";
}

<style> 
    .gradient11 {
    /* background: #f6d365; */
    background: #ADD8E6;
    background: -webkit-linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1));
    background: linear-gradient(to right bottom, #ADD8E6, rgba(253, 160, 133, 1));
}
	.gradient-custom {
/* fallback for old browsers */
/*background: #f6d365;*/
background:#778899 !important;

/* Chrome 10-25, Safari 5.1-6 */
background: -webkit-linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1));

/* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
background: linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1))

    }
    .QQ {
    position: relative;
    top: 34px;
}

	</style>

<section class="vh-100" style="background-color: #f4f5f7;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100 QQ">
      <div class="col col-lg-6 mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: .5rem;">
          <div class="row g-0">
            <div class="col-md-4 gradient-custom text-center text-white gradient11"
              style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
              <img src=@Url.Content("~/Home/images/" +  ViewBag.image) asp-append-version="true" 
             class="img-fluid my-5" style="width: 80px;" />
               
              <h5>@ViewBag.Fullname</h5>
             
              
            </div>
            <div class="col-md-8">
              <div class="card-body p-4">
                <h6>Information</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>Email</h6>
                    <p class="text-muted">@ViewBag.Email</p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6>Phone</h6>
                    <p class="text-muted">@ViewBag.Phonenumber</p>
                  </div>
                 <div>
                 <table class="table">
                    
                 @foreach(var item in Model){
                <tr>  <td>

                <a asp-action="Edit" asp-route-id="@item.UserId"> Edit </a> 
                
                    </td>  </tr> 
                 }

                </table>
                </div>
                
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
