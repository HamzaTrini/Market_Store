@model IEnumerable<MarketStore.Models.total_sales>
@{
   
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<style>
button:not(:disabled), [type="button"]:not(:disabled), [type="reset"]:not(:disabled), [type="submit"]:not(:disabled) {
    cursor: pointer;
    background-color: white;
}
input[type="search"] {
    background-color: white !important;
}
label {
    display: inline-block;
    margin-bottom: 0.5rem;
    color: white;
}
</style>
<link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />

<form asp-action="Total_sale">
    <input class="w3-input" type="date"  name="Sdate" />
     <input class="w3-input" type="date" name="Edate" />
     <button type="submit" > Search</button>

</form>
<table class="table" id ="example">
    <thead>
        <tr><th>Customer Name</th> <th>Category Name</th><th> Store Name </th> <th>Product Name </th> <th> Price </th> <th>Quntity</th>  <th> Order Date</th>  </tr>

    </thead>
    @foreach(var item in Model){
    <tbody>
        
<tr><td> @item.user.Fullname</td>  <td>@item.category.Name</td><td> @item.store.Name </td> <td>@item.product.Name </td> 
    <td> @item.order.Price </td>  <td>@item.order.TotalPrice</td> <td> @item.orderproduct.DateOrder</td>  </tr>
    </tbody>
    }
    <tfoot>
        <tr>
            <td>Cost </td>
            <td> @ViewBag.Cost </td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>

        </tr>
        <tr>
            <td>Total Order</td>
            <td> @ViewBag.TotalOrder </td>
            <td></td>
             <td></td>
              <td></td>
               <td></td>
                <td></td>
        </tr>
    </tfoot>
</table>

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>

<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>

<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copyHtml5',
                'excelHtml5',
                'csvHtml5',
                'pdfHtml5'
            ]
        });
    });
</script>
